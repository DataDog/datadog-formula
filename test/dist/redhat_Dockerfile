FROM centos:7
LABEL maintainer="package@datadoghq.com"

# preparation
RUN yum update -y &&\
    yum install -y curl

# install salt
RUN curl -L https://bootstrap.saltstack.com | sh -s -- -d -X stable

# update python-msgpack
RUN yum install -y python-msgpack

# Add and set start script
ADD start.sh /start.sh
CMD ["bash", "start.sh"]
